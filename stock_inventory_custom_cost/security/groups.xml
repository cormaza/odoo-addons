<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="group_custom_cost_inventory" model="res.groups">
        <field name="name">Can set custom cost inventory adjustments</field>
        <field name="category_id" ref="base.module_category_extra" />
        <field name="implied_ids" eval="[(4, ref('stock.group_stock_manager'))]" />
        <field name="users" eval="[(4, ref('base.user_root'))]" />
    </record>
    <record id="base.user_admin" model="res.users">
        <field
            name="groups_id"
            eval="[(4,ref('stock_inventory_custom_cost.group_custom_cost_inventory'))]"
        />
    </record>
</odoo>
